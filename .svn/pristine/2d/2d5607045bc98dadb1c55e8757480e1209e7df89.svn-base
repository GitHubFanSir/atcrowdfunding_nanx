package com.atnanx.atcrowdfunding.core.constant.state;

import org.apache.commons.lang3.StringUtils;

public enum MessageTemplateEnum {
    //登录
    SIGN_IN("SMS_168340097","1000"),
    LOGIN("SMS_168346045","1001");

    //模板CODE
    private String code;
    //模板名称
    private String type;


    MessageTemplateEnum(String code, String type) {
        this.code = code;
        this.type = type;
    }

    public String getCode() {
        return code;
    }

    public void setCode(String code) {
        this.code = code;
    }

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }

    public static String getTemplateCode(String type){
        if (StringUtils.isBlank(type))
            throw new RuntimeException("您的参数有误");
        for (MessageTemplateEnum value : MessageTemplateEnum.values()) {
            if (value.getType().equals(type)){
                return value.getCode();
            }
        }
        throw new RuntimeException("未找到匹配的TemplateCode");
    }

}
